@model EmployeeManagement.Models.Employee

<h2>Create Employee</h2>

<form asp-action="Create" autocomplete="off" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label>Name</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>NID</label>
        <input asp-for="NID" class="form-control" />
        <span asp-validation-for="NID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Age</label>
        <input asp-for="Age" class="form-control" type="number" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <!-- <div class="form-group">
        <label>Join Date</label>
        <input asp-for="JoinDate" class="form-control" type="date" />
        <span asp-validation-for="JoinDate" class="text-danger"></span>
    </div> -->
    <div class="form-group">
        <label>Organization</label>
        <input asp-for="Organization" class="form-control" />
        <span asp-validation-for="Organization" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Expertise</label>
        <input asp-for="Expertise" class="form-control" />
        <span asp-validation-for="Expertise" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Criminal Record</label>
        <input asp-for="CriminalRecord" class="form-control" />
        <span asp-validation-for="CriminalRecord" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label>Profile Picture</label>
        <input type="file" name="ProfilePicture" class="form-control" />
    </div>
    <br>
    <button type="submit" class="btn btn-success">Create</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
